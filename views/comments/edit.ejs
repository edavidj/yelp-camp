<% include ../partials/header.ejs %>
<div class="container">
  <div class="row">
    <h1 id="new-title">Edit Comment</h1>
    <div id="center">
      <form action="/campgrounds/<%=campground%>/comments/<%=comment._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit" name="submit" value="Submit">
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
