<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 id="new-title">Create a New Campground</h1>
    <div id="center">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Enter name...">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="Enter image url...">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="Enter a description...">
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit" name="submit" value="Submit">
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>