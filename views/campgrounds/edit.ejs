<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 id="new-title">Edit <%=campground.name%></h1>
    <div id="center">
      <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="data[name]" value="<%=campground.name%>">
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="data[price]" value="<%=campground.price%>" min="0.01" step="0.01">
          </div>
        <div class="form-group">
          <input class="form-control" type="text" name="data[image]" value="<%=campground.image%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="data[description]" value="<%=campground.description%>">
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit" name="submit" value="Submit">
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>